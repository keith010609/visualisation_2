{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": ""}},
    "width": 400,
    "height": 300,
    "data": {"url": "https://raw.githubusercontent.com/keith010609/visualisation_2/main/data/Population%20growth.csv"},
    "transform": [
      {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{ "field": "Population growth", "order": "ascending" }]
      }, {
        "filter": "datum.rank > 27 && datum.rank <= 52"
      }
    ],
    "mark": "bar",
    "encoding": {
      "color": {
        "field": "Population growth",
        "title": "Population growth",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [0],
          "range": ["red", "blue"]
          }
          
      },
      "x": {"field": "Country", "type": "nominal", "title": "Country","sort":{"field":"Population growth"}},
      "y": {"field": "Population growth","type": "quantitative", "title": "Population growth"},
      "tooltip":[
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Population growth", "type": "quantitative", "title": "Population growth"}
      ]
    }
}
